<?xml version="1.0"?>

<PropertyList>

    <default>

        <menu n="10">
            <label>SUMPAC</label>
            <enabled type="bool">true</enabled>
	
            <item>
                <label>Aircraft Options</label>
                <binding>
                    <command>dialog-show</command>
                    <dialog-name>aircraft-dialog</dialog-name>
                </binding>
            </item>

            <!--item>
                <label>Select Livery</label>
                <binding>
                    <command>nasal</command>
                    <script>aircraft.livery.dialog.toggle()</script>
                </binding>
            </item-->

            <item>
                <label>Power Output On/Off</label>
                <binding>
                    <command>property-toggle</command>
                    <property>/sim/gui/show-power-output</property>
                </binding>
            </item>

            <item>
                <label>Human Power Curves</label>
                <binding>
                    <command>dialog-show</command>
                    <dialog-name>power-curves-dialog</dialog-name>
                </binding>
            </item>

            <item>
                <label>Flashlight</label>
                <binding>
                    <command>nasal</command>
                    <script>sumpac.toggle_flashlight()</script>
                </binding>
            </item>
        </menu>

    </default>

</PropertyList>
