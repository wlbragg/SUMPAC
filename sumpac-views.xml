<?xml version="1.0" encoding="UTF-8"?>

<PropertyList>

    <!-- Position the pilot viewpoint and angle -->
    <view>
        <internal type="bool" archive="y">true</internal>
        <config>
            <x-offset-m archive="y" type="double">0.0</x-offset-m><!--y-->
            <y-offset-m archive="y" type="double">0.50</y-offset-m><!--z-->
            <z-offset-m archive="y" type="double">-0.25</z-offset-m><!--x-->
            <pitch-offset-deg type="double">-5</pitch-offset-deg>
            <default-field-of-view-deg>54</default-field-of-view-deg>
        </config>
    </view>

</PropertyList>
